{
  "name": "nodecg-csgo-manager",
  "version": "0.1.0",
  "description": "Layouts for CSGO spectating",
  "homepage": "",
  "author": {
    "name": "Ewan Lyon",
    "url": "https://ewanlyon.com"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "nodecg": {
    "compatibleRange": "^1.7.1",
    "dashboardPanels": [
      {
        "name": "server",
        "title": "Server",
        "width": 2,
        "file": "server.html",
        "workspace": "Setup"
      },
      {
        "name": "teams",
        "title": "Teams",
        "width": 5,
        "file": "teams.html",
        "workspace": "Setup"
      },
      {
        "name": "maps",
        "title": "Maps",
        "width": 3,
        "file": "maps.html",
        "workspace": "Setup"
      },
      {
        "name": "teampresetcreator",
        "title": "Team/Player Creator",
        "width": 2,
        "file": "team-preset-creator.html",
        "workspace": "Setup"
      },
      {
        "name": "mapscores",
        "title": "Map Scores",
        "width": 3,
        "file": "map-scores.html",
        "workspace": "Producer"
      }
    ],
    "assetCategories": [
      {
        "name": "teamimages",
        "title": "Team Logo",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png",
          "svg"
        ]
      },
      {
        "name": "playerIcons",
        "title": "Player Icons",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "teamPreset",
        "title": "Team Preset",
        "allowedTypes": [
          "json"
        ]
      }
    ]
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:dashboard",
    "build:extension": "trash extension && tsc -b ./src/extension/tsconfig.json",
    "build:dashboard": "trash dashboard && parcel build src/dashboard/*.html --out-dir dashboard --public-url ./ --no-content-hash",
    "build:graphics": "trash graphics && parcel build src/graphics/*.html --out-dir graphics --public-url ./ --no-content-hash",
    "watch:dashboard": "trash dashboard && parcel watch src/dashboard/*.html --out-dir dashboard --public-url ./",
    "watch:graphics": "trash graphics && parcel watch src/graphics/*.html --out-dir graphics --public-url ./",
    "watch:extension": "tsc -b ./src/extension/tsconfig.json --watch",
    "schema-types": "trash src/types/schemas && nodecg schema-types",
    "start:solo": "node ../.. --bundlesEnabled=csgo-layouts",
    "start": "node ../..",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "lint:fix": "eslint ./src/**/*.{ts,tsx} --fix"
  },
  "repository": "https://github.com/nodecg/nodecg.git",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@types/recharts": "^1.8.18",
    "@types/ws": "^7.4.0",
    "big-integer": "^1.6.48",
    "deep-equal": "^2.0.5",
    "fast-deep-equal": "^3.1.3",
    "gsap": "^3.5.1",
    "livesplit-core": "^0.10.2",
    "lodash": "^4.17.20",
    "parcel": "^1.12.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-is": "^16.13.1",
    "react-twemoji": "^0.3.0",
    "recharts": "^2.0.0-beta.8",
    "styled-components": "^5.2.1",
    "trash-cli": "^3.1.0",
    "typeface-roboto": "1.1.13",
    "use-nodecg": "^0.4.0",
    "ws": "^7.4.1"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.1",
    "@types/lodash": "^4.14.165",
    "@types/react-dom": "^16.9.10",
    "@types/styled-components": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
